<!DOCTYPE html>
<html lang="en">
<head>
    <title>Orders</title>
    <link rel="stylesheet" href="/style.css" type="text/css">
</head>
<body>
<div class="container">
    <h2>Orders</h2>

    <ul>
        <% orders.forEach(o => { %>
            <li class="product-item">
                <div>
                    <strong><%= o.ProductName %></strong>
                    - $<%= o.Price %>
                    - Qty: <%= o.Quantity %>
                </div>

                <form method="GET" action="/orders/<%= o.ID %>">
                    <button type="submit">Details</button>
                </form>
            </li>
        <% }) %>
    </ul>

    <p class="pagination">
        <% if (currentPage > 1) { %>
            <a href="/orders?page=<%= currentPage - 1 %>">previous</a>
            <span> - </span>
        <% } %>

        Page <%= currentPage %> of <%= totalPages %>

        <% if (currentPage < totalPages) { %>
            <span> - </span>
            <a href="/orders?page=<%= currentPage + 1 %>">next</a>
        <% } %>
    </p>

    <a href="/dashboard">Back</a>
</div>
</body>
</html>
