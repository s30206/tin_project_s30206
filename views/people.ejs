<!DOCTYPE html>
<html lang="en">
<head>
    <title>People</title>
    <link rel="stylesheet" href="/style.css" type="text/css">
</head>
<body>
<div class="container">
    <h2>People</h2>

    <ul>
        <% people.forEach(p => { %>
            <li class="product-item">
                <div>
                    <strong><%= p.FirstName %> <%= p.LastName %></strong> — <%= p.Email %>
                </div>

                <form method="GET" action="/people/<%= p.ID %>">
                    <button type="submit">Details</button>
                </form>
            </li>
        <% }) %>
    </ul>

    <p class="pagination">
        <% if (currentPage > 1) { %>
            <a href="/people?page=<%= currentPage - 1 %>">previous</a>
            <span> - </span>
        <% } %>

        Page <%= currentPage %> of <%= totalPages %>

        <% if (currentPage < totalPages) { %>
            <span> - </span>
            <a href="/people?page=<%= currentPage + 1 %>">next</a>
        <% } %>
    </p>

    <a href="/dashboard">Back</a>
</div>
</body>
</html>
